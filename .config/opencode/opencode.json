{
    "$schema": "https://opencode.ai/config.json",
    "permission": {
        "*": "ask",
        "todoread": "allow",
        "todowrite": "allow",
        "external_directory": "deny",
        "read": {
            "*": "allow",
            "*.env": "deny",
            "*.env.example": "allow"
        },
        "edit": {
            "*": "allow"
        },
        "glob": {
            "*": "allow"
        },
        "grep": {
            "*": "allow"
        },
        "list": {
            "*": "allow"
        },
        "bash": {
            "*": "ask",
            "rm *": "deny",
            "ls *": "allow",
            "grep *": "allow",
            "find *": "allow",
            "rg *": "allow",
            "fd *": "allow",
            "git *": "deny",
            "git grep *": "allow",
            "git status *": "allow",
            "git diff *": "allow",
            "git log *": "allow",
            "git show *": "allow",
            "git blame *": "allow"
        }
    }
}

